<h3>Welcome <%=name%>  </h3>
<p>Here are your stories</p>

<% if(stories.length!=0)  { %>  
  <table class="striped">
    <thead>
      <tr> 
        <th>Title</th>
        <th>Date</th>
        <th>Status</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
        <% for(let story of stories) { %>
          <tr>
            <td><a href="/stories/<%= story.id %>"><%= story.title %></a></td>
            <td><%= formatDate(story.createdAt,'Do MMMM, YYYY h:mm:ss a') %></td>
            <td><span class="dash-status"><%= story.status %></span></td>
            <td>
                <a href="/stories/edit/<%=story._id%>" class="btn btn-float">
                <i class="fas fa-edit"></i></a>

                <form action="/stories/<%=story._id%>?_method=DELETE" method="POST"><button class="btn red" type="submit"> <i class="fas fa-trash"></i></button></form>
            </td>
          </tr>

          <% } %>
    </tbody>
  </table>

<% } else {  %>

  <p>You have not created stories</p>
  <% } %>