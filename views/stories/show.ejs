<div class="row">
    <div class="col-12 col-md-8">
        <h3><%=story.title%>
            <small> <%- editIcon(story.user, loggedInUser, story._id,false) %></small>
        </h3>
        <div class="card story">
            <div class="card-body">
                <h5 class="card-title"><%= formatDate(story.createdAt,'Do MMMM, YYYY | h:mm:ss a') %></h5>
                <p class="card-text"><%-stripTags(story.body) %></p>
            </div>
        </div>
    </div>
    <div class="col-12 col-md-4">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title"><%=story.user.displayName%></h5>
                <img src="<%=story.user.image%>" class="rounded-circle img-fluid img-small">
            </div>
            <div class="card-footer">
                <a style="text-decoration:none;" href="/stories/user/<%=story.user._id%>">More From <%=story.user.firstName%></a>
            </div>
        </div>
    </div>
  </div> 