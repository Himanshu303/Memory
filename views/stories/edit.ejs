<h3>Edit Story</h3>
<div class="row">
  <form action="/stories/<%=story._id%>?_method=PUT" method="POST" class="validated-form" 
    onsubmit="return validateForm()" novalidate enctype="multipart/form-data">
    <br>
    <div class="mb-3">
      <label for="title">Title</label>
      <input type="text" class="form-control id=" title" name="title" value="<%= story.title %>" required>
      <div class="valid-feedback">Looks Good</div>
      <div class="invalid-feedback">
        Please enter title
      </div>
    </div>


    <div class="mb-3">
      Status
      <select class="form-select form-select" name="status" required>
        <% for(let status of statusList){ %>
          <option value="<%= status %>" <%=status==story.status ? 'selected' : '' %>><%=status%>
          </option>
          <% } %>
      </select>
      <div class="valid-feedback">Looks Good</div>
      <div class="invalid-feedback">
        Please enter Status
      </div>
    </div>

</div>
<div class="mb-3">
  <label for="image" class="form-label">Add an Image</label>
  <input type="file" class="form-control" id="image" name="image" multiple>
  <div class="valid-feedback">Looks Good</div>
  <div class="invalid-feedback">
    Please upload an image
  </div>

</div>

<div class="mb-3">
  <h5>Tell Us Your Story:</h5>
  <textarea id="body" name="body" required><%= story.body %></textarea>

  <div class="valid-feedback" id="valid">

  </div>
  <div class="invalid-feedback" id="invalid">

  </div>

</div>

<div class="mb-3">
  <% story.images.forEach((img,i)=>{ %>
      <img src="<%=img.url%>" alt="" class="show-img img-thumbnail" width="800" height="600">
      <div class="form-check-inline"> 
        <input type="checkbox" id="img-<%=i%>" name="deleteImages[]" value="<%=img.fileName%>">
      </div>
      <label for="img-<%=i%>">Delete</label> <br>
    <%})%>

</div>


<button class="btn btn-primary" type="submit" name="action">Edit

</button>
<a href="/dashboard" class="btn btn-danger">Cancel</a>

</form>
</div>