<h1>Stories</h1>
<div class="row">
  <% if(stories.length!=0)  { %>  
  
          <% for(let story of stories) { %>
                <div class="col s12 m4">
                  <div class="card">
                    <div class="card-image">
                      <%- editIcon(story.user, loggedInUser, story._id) %>
                    </div>
                    <div class="card-content centre-align">
                      <h5><%= story.title %></h5> 
                      <p><%- stripTags(truncate(story.body,150))%> </p>
                        <br>
                        <div class="chip">
                            <img src="<%= story.user.image %>" alt="">
                            <a href="/stories/user/<%= story.user._id %>"><%= story.user.firstName %></a>
                        </div>
                    </div>
                    <div class="card-action centre-align">
                      <a href="/stories/<%= story._id %>" class="btn grey">Read More</a>
                    </div>
                  </div>
                </div>
  
            <% } %>

  
  <% } else {  %>
  
    <p>You have not created stories</p>
    <% } %>
</div>