 <h1>Stories</h1>
 <div class="container">
<div class="row row-cols-1 row-cols-md-3 g-4">
  <% if(stories.length!=0)  { %>  
    <% for(let story of stories) { %>
  <div class="col">
    <div class="card h-100">
      <div class="card-body">
        <%- editIcon(story.user, loggedInUser, story._id) %>
        <h5 class="card-title fw-bold"><%= story.title %></h5>
        <p class="card-text"><%- stripTags(truncate(story.body,100)) %></p>
        <div class="chip">
          <img src="<%= story.user.image %>" alt="Contact Person" class="chip-img"> 
          <span class="chip-text"><a style="text-decoration:none" href="/stories/user/<%= story.user._id %>"><%= story.user.firstName %></a></span>
        </div>
        <hr class="my-3">
        <div class="mt-3">
        
          <a href="/stories/<%= story._id %>" class="btn btn-primary d-block">Read More</a>
           
        
        </div>
      </div>
    </div>
  </div>
  <% } %>
  <% } else {  %>
    <p>You have not created stories</p>
  <% } %>
</div>
</div>
